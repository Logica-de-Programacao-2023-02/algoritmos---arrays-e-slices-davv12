package main

import (
	"fmt"
)

func main() {
	var tamanho int
	fmt.Print("Informe o tamanho do Slice: ")
	fmt.Scan(&tamanho)

	sliceDeInteiros := make([]int, tamanho)

	for i := 0; i < tamanho; i++ {
		fmt.Printf("Informe o valor para o elemento %d: ", i+1)
		fmt.Scan(&sliceDeInteiros[i])
	}

	fmt.Println("O Slice de inteiros informado é:", sliceDeInteiros)

	soma := 0
	for _, valor := range sliceDeInteiros {
		soma += valor
	}

	fmt.Printf("A soma dos valores no Slice é: %d\n", soma)
}
